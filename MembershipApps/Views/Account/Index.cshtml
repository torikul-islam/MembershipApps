@using MembershipApps.Areas.Admin.Models
@model IEnumerable<MembershipApps.Models.UserViewModel>

@{
    ViewBag.Title = "Users and Subscriptions";
}
@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{

<h2>Index</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-condensed table-striped">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        
        @Html.Partial("_TableButtonPartial", new SmallButtonModel {UserId =  item.Id})
    </tr>
}

</table>

}