@using MembershipApps.Areas.Admin.Models
@model IEnumerable<Memberships.Entities.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-condensed table-striped">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.ProductLinkTextId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductTypeId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.ProductLinkText.Title)
            (@Html.DisplayFor(m => item.ProductLinkTextId))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductType.Title)
            (@Html.DisplayFor(modelItem => item.ProductLinkTextId))
        </td>
        @Html.Partial("_TableButtonPartial", new SmallButtonModel {Id = item.Id})
    </tr>
}

</table>
